{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'Utilisateur</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Rôles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Mot de Passe</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th scope="row">Prénom</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th scope="row">Téléphone</th>
                    <td>{{ user.phone }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>

            <div class="d-flex">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning me-2">Modifier</a>

                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
