<!-- Section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <div class="col-md-12">
                <div class="section-title text-center">
                    <h3 class="title">Produits Associés</h3>
                </div>
            </div>

            {% for associatedProduct in associatedProducts %}
                <!-- product -->
                <div class="col-md-3 col-xs-6">
                    <div class="product">
                        <div class="product-img">
                            {% if associatedProduct.images|length > 0 %}
                                <img src="{{ asset('assets/img/' ~ associatedProduct.images[0].name) }}" alt="{{ associatedProduct.name }}">
                            {% else %}
                                <img src="/assets/img/product01.png" alt="Default Image">
                            {% endif %}
                        </div>
                        <div class="product-body">
                            <p class="product-category">
                                {% for category in associatedProduct.categories %}
                                    {{ category.name }}
                                    {% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </p>
                            <h3 class="product-name"><a href="{{ path('product_show', {'id': associatedProduct.id}) }}">{{ associatedProduct.name }}</a></h3>
                            <h4 class="product-price">{{ associatedProduct.prices }} €</h4>
                            <div class="product-rating">
                                {% for i in 1..5 %}
                                    {% if i <= averageRating %}
                                        <i class="fa fa-star"></i>
                                    {% else %}
                                        <i class="fa fa-star-o"></i>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <div class="product-btns">
                                <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">ajouter à la liste de souhaits</span></button>
                                <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">ajouter pour comparer</span></button>
                                <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">aperçu rapide</span></button>
                            </div>
                        </div>
                        <div class="add-to-cart">
                            <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> aperçu rapide</button>
                        </div>
                    </div>
                </div>
                <!-- /product -->
            {% else %}
                <p>Aucun produit associé trouvé.</p>
            {% endfor %}

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /Section -->