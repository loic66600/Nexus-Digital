<!-- SECTION -->
<div class="section">
	<div class="container">
		<div
			class="row">
			<!-- section title -->
			<div class="col-md-12">
				<div class="section-title">
					<h3 class="title">Votre Panier</h3>
					<div class="section-nav">
						<ul class="section-tab-nav tab-nav">
							<li>
								<a href="/">Home</a>
							</li>
							<li class="active">Panier</li>
						</ul>
					</div>
				</div>
			</div>
			<!-- /section title -->

			<!-- Products tab & slick -->
			<div class="col-md-12">
				<div class="row">
					<div
						class="products-tabs">
						<!-- tab -->
						<div id="tab1" class="tab-pane active">
							<div class="products-slick" data-nav="#slick-nav-1">
								{% if panier and panier.lignePaniers|length > 0 %}
									{% for lignePanier in panier.lignePaniers %}
										<div class="product">
											<div class="product-img">
												{% if lignePanier.product.images|length > 0 %}
													<img src="{{ asset('assets/img/' ~ lignePanier.product.images[0].name) }}" alt="{{ lignePanier.product.name }}">
												{% else %}
													<img src="/assets/img/product01.png" alt="{{ lignePanier.product.name }}">
												{% endif %}
											</div>
											<div class="product-body">
												<h3 class="product-name">{{ lignePanier.product.name }}</h3>
												<h4 class="product-price">{{ lignePanier.product.prices }}
													€</h4>
												<p>Quantité :
													{{ lignePanier.quantity }}</p>
												<form action="{{ path('cart_remove', {'id': lignePanier.id}) }}" method="post" style="display: inline;">
													<button type="submit" class="btn btn-danger">Supprimer</button>
												</form>
											</div>
										</div>
									{% endfor %}
								{% else %}
									<p>Votre panier est vide.</p>
								{% endif %}
							</div>
							<div id="slick-nav-1" class="products-slick-nav"></div>
						</div>
						<!-- /tab -->
					</div>
				</div>

				<!-- Bouton Passer la Commande -->
				{% if panier and panier.lignePaniers|length > 0 %}
					<div class="row mt-4">
						<div class="col-md-12">
							<a href="{{ path('app_checkout') }}" id="button-commander" class="btn btn-primary btn-lg">Passer la commande</a>
						</div>
					</div>
				{% endif %}
				<!-- /Bouton Passer la Commande -->

			</div>

			<!-- Wishlist Section -->
			<div class="col-md-12 mt-5">
				<h3>Votre Liste de Souhaits
					<i class="fa fa-heart-o"></i>
				</h3>

				{% if wishlist and wishlist|length > 0 %}
					<div class="products-slick" data-nav="#slick-nav-1">
						{% for produit in wishlist %}
							<div class="product">
								<div class="product-img">
									{% if produit.images|length > 0 %}
										<img src="{{ asset('assets/img/' ~ produit.images[0].name) }}" alt="{{ produit.name }}">
									{% else %}
										<img src="/assets/img/product01.png" alt="{{ produit.name }}">
									{% endif %}
								</div>
								<div class="product-body">
									<p class="product-category">
										{% for categorie in produit.categories %}
											{{ categorie.name }}
											{% if not loop.last %},
											{% endif %}
										{% endfor %}
									</p>
									<h3 class="product-name">
										<a href="{{ path('product_show', {'id': produit.id}) }}">{{ produit.name }}</a>
									</h3>
									<h4 class="product-price">{{ produit.prices }}
										€</h4>
									<div class="product-rating">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
									</div>
									<!-- Formulaire pour ajouter à la wishlist -->
									<div
										class="product-btns">
										<!-- Formulaire pour ajouter à la wishlist -->
										<form action="{{ path('wishlist_add', {'id': produit.id}) }}" method="post" style="display: inline;">
											<button type="submit" class="add-to-wishlist">
												<i class="fa fa-heart-o"></i>
												<span class="tooltipp">ajouter au panier</span>
											</button>
										</form>

										<!-- Espace entre les boutons -->
										<span style="display: inline-block; width: 10px;"></span>

										<!-- Formulaire pour supprimer de la wishlist -->
										<form action="{{ path('wishlist_remove', {'id': produit.id}) }}" method="post" style="display: inline;">
											<button type="submit" class="remove-from-wishlist btn btn-danger">
												<i class="fa fa-trash-o"></i>
												Retirer
											</button>
										</form>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<div id="slick-nav-1" class="products-slick-nav"></div>
				{% else %}
					<p>Votre liste de souhaits est vide.</p>
				{% endif %}
			</div>
			<!-- /Wishlist Section -->
		</div>
	</div>
</div>
<!-- /SECTION -->
